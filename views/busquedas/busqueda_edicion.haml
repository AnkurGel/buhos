.header=t_search_title(@revision[:nombre], @busqueda.nombre,:Edit_search)

%ul.breadcrumb
  %li
    %a{:href=>url("/revision/#{@revision.id}")}=@revision.nombre
  %li
    %a{:href=>url("/revision/#{@revision.id}/busquedas")}=t(:Searchs)
  %li
    %a{:href=>url("/busqueda/#{@busqueda.id}")}=@busqueda.nombre
  %li.active
    =t(:Edit)

%form{:method=>:post, :action=>url("/revision/busqueda/actualizar"), :enctype=>'multipart/form-data'}
  %input{:type=>"hidden", :name=>"revision_sistematica_id",:value=>@revision[:id]}
  %input{:type=>"hidden", :name=>"busqueda_id",:value=>@busqueda[:id]}
  .form-group
    %label{:for=>"base_bibliografica_id"}=t(:Bibliographic_database)
    -Base_Bibliografica.all.each do |bb|
      %input{:class=>"form-check",:type=>"radio", :name=>"base_bibliografica_id",:value=>bb.id, :checked=>@busqueda[:base_bibliografica_id]==bb.id}= bb.nombre
  .form-group
    %label=t(:Date)
    %input{:class=>"form-control",:type=>"text", :name=>"fecha",:value=>@busqueda[:fecha]}
  .form-group
    %label=t(:Search_criteria)
    %textarea{:class=>"form-control",:name=>"criterio_busqueda"}=@busqueda[:criterio_busqueda]
  .form-group
    %label=t(:Description)
    %input{:class=>"form-control",:type=>"text", :name=>"descripcion",:value=>@busqueda[:descripcion]}
  .form-group
    %label=t(:File)
    %input{:type=>'file', :name=>'archivo'}
  %input.btn.btn-primary{:type=>:submit,:value=>t('Send')}