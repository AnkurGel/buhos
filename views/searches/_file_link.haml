- not_message_allocated||=false
- if search[:filename]
  %p=t("search.there_is_a_file") unless not_message_allocated
  %p
    %a{:href=>"/search/#{search[:id]}/file/download"}
      - if not_message_allocated
        =search[:filename]
      - else
        =t_desc_value("search.filename", search[:filename])
      %span.glyphicon.glyphicon-download
- else
  %p
    %em=t("search.no_file", search_name:search.name)
