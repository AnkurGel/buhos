.heading
  =t_systematic_review_title(@revision[:nombre], t("systematic_review_page.complete_empty_abstract")+". "+t(:Stage_title, :stage_name=>t(Revision_Sistematica.get_nombre_etapa(@stage))),false)

%ul.breadcrumb
  %li
    %a{:href=>url("/revisiones")}=t(:Systematic_reviews)
  %li
    %a{:href=>url("/revision/#{@revision[:id]}")}=@revision[:nombre]
  %li
    %a{:href=>url("/revision/#{@revision[:id]}/administracion_etapas")}=t(:Administration)
  %li
    %a{:href=>url("/revision/#{@revision[:id]}/administracion/#{@stage}")}=t(Revision_Sistematica.get_nombre_etapa(@stage))
  %li{:class=>:active}
    =t("systematic_review_page.complete_empty_abstract")

.list-group
  - @cd_sin_abstract.each do |cd|
    .list-group-item
      =cd.ref_apa_6_breve_html
      %p=sprintf("<strong>Referencias can√≥nicas:</strong> citado por %d / referencia a %d / citado por %d RTR ", cd[:n_total_referencias_recibidas].to_i, cd[:n_total_referencias_hechas].to_i, cd[:n_referencias_rtr].to_i )

      %div
        =partial(:canonico_documento_boton,:locals=>{:id=>cd.id})
        %p
        %strong=t(:Abstract)
        %div
          - if permiso("documentos_canonicos_editar")
            =a_textarea_editable(cd[:id], "canonico_documento", "/canonico_documento/editar_campo/abstract", cd[:abstract],"")
          - else
            =@cd[:abstract]