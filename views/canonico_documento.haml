:javascript
  $(document).ready(function() {
    buscar_similares_canonico();
  });

%table.reporte
  - [:author, :year,:title,:journal, :volume,:pages,:doi].each do |field|
    %tr
      %th=field.capitalize
      %td=a_editable(@cd[:id], "canonico_documento", "/canonico_documento/editar_campo/#{field}", @cd[field],"")


%h3 Crossref
- if @cr_doi
  =@cr_doi.ref_apa_6
- elsif @cd.doi
  %a{:href=>url("/canonico_documento/#{@cd[:id]}/obtener_crossref")}
    %button{:class=>"btn btn-primary"}
      Descargar desde Crossref
- else
  %p
    %em No hay DOI para unirse a Crossref

%h3 Registros

=partial(:registros_lista, :locals=>{:registros=>@registros})

%h3 Referencias

.list-group
- @referencias.each do |ref|
  %div.list-group-item
    %span{:class=>"badge"}=ref[:n]
    .list-group-item-text
      =ref[:texto]
      - if ref[:doi]
        =a_doi(ref[:doi])
      - else
        %a{:href=>url("/referencia/#{ref[:id]}/buscar_crossref")}
          %button{:class=>"btn btn-default btn-sm"}
            %span{:class=>"glyphicon glyphicon-search"}
            Buscar en Crossref
      %div{:class=>:small}=ref[:id]