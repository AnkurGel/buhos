%h2=t(:Canonical_document_title, cd_name:@cd.ref_apa_6)

:javascript
  $(document).ready(function() {
    buscar_similares_canonico();
  });

%table.reporte
  - [:author, :year,:title,:journal, :volume,:pages,:doi,:url].each do |field|
    %tr
      %th=field.capitalize
      %td
        - if permiso("documentos_canonicos_editar")
          =a_editable(@cd[:id], "canonico_documento", "/canonico_documento/editar_campo/#{field}", @cd[field],"")
        -else
          =@cd[field]


%h3=t(:Abstract)
%p
  - if permiso("documentos_canonicos_editar")
    =a_textarea_editable(@cd[:id], "canonico_documento", "/canonico_documento/editar_campo/abstract", @cd[:abstract],"")
  - else
    =@cd[:abstract]

.btn-group
  -if permiso("scopus_acceder")
    - if !@cd.abstract
      %a{:href=>url("/canonico_documento/#{@cd[:id]}/buscar_abstract_scopus"), :role=>:button, :class=>"btn btn-default"}Buscar abstract en Scopus
  -if permiso("crossref_acceder")
    - if @cd.doi
      %a{:href=>url("/canonico_documento/#{@cd[:id]}/buscar_referencias_crossref"), :role=>:button, :class=>"btn btn-default"} Buscar referencias en Crossref

%h3 Crossref
- if @cr_doi
  =@cr_doi.ref_apa_6_breve_html
- elsif @cd.doi
  %a{:href=>url("/canonico_documento/#{@cd[:id]}/obtener_crossref")}
    %button{:class=>"btn btn-primary"}
      =t(:Obtain_information_from_Crossref)
- else
  %p
    %em=t(:No_DOI_to_obtain_information_from_Crossref)

%h3=t("canonical_document.records_on_which_appears")

=partial(:registros_lista, :locals=>{:registros=>@registros})

%h3=t("canonical_document.references_on_which_appears")

- if @referencias.count==0
  %div{:class=>"alert alert-warning"}=t(:Doesnt_appears_on_any_reference)
- else

  .list-group
  - @referencias.each do |ref|
    %div.list-group-item
      %span{:class=>"badge"}=ref[:n]
      .list-group-item-text
        =ref[:texto]
        - if ref[:doi]
          =a_doi(ref[:doi])
        - else
          %a{:href=>url("/referencia/#{ref[:id]}/buscar_crossref")}
            %button{:class=>"btn btn-default btn-sm"}
              %span{:class=>"glyphicon glyphicon-search"}
              =t(:Search_on_Crossref)
        %div{:class=>:small}
          %a{:href=>url("/referencia/#{ref[:id]}")}=ref[:id]
%h3=t("canonical_document.references")

=partial(:referencias_lista, :locals=>{:referencias=>@referencias_realizadas})

