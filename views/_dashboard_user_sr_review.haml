- n_cd_assigned = adu.canonical_documents.count
- if is_administrator
  - ars=AnalysisSystematicReview.new(sr)
  %p
    %a{:href=>"/review/#{sr[:id]}/administration/#{stage}"}
      %snap.glyphicon.glyphicon-tower
      =t_desc_value("user_dashboard.count_total_canonical_documents_stage", sr.cd_id_by_stage(stage).count)
  - if ars.resolution_pattern(stage)[Resolution::NO_RESOLUTION].to_i>0
    %p
      %snap.glyphicon.glyphicon-tower
      =t_desc_value("user_dashboard.count_canonical_document_without_resolution", a_tag("/review/#{ sr[:id] }/administration/#{stage}#decision_statistics",  t("user_dashboard.check_n_canonical_documents_without_resolution", count:ars.resolution_pattern(stage)[Resolution::NO_RESOLUTION])))
- else
  %p=t_desc_value("user_dashboard.count_total_canonical_documents_stage", sr.cd_id_by_stage(stage).count)
%p=t_desc_value("user_dashboard.count_canonical_document_assigned", a_tag("/review/#{sr[:id]}/#{stage}", t("user_dashboard.check_n_assigned_canonical_documents", count: n_cd_assigned) ) )
- if adu.total_decisions[Decision::NO_DECISION].to_i>0
  %p=t_desc_value("user_dashboard.count_canonical_document_without_decision", a_tag("/review/#{ sr[:id] }/#{ stage }?decision=#{ Decision::NO_DECISION }", t("user_dashboard.check_n_undecided_canonical_documents", count: adu.total_decisions[Decision::NO_DECISION])))