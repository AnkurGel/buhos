.header=t_search_title(@revision[:nombre], @search.nombre,:Search_view)

%ul.breadcrumb
  %li
    %a{:href=>url("/review/#{@revision.id}")}=@revision.nombre
  %li
    %a{:href=>url("/review/#{@revision.id}/searchs")}=t(:Searchs)
  %li
    %a{:href=>url("/search/#{@search.id}")}=@search.nombre
  %li.active
    =t(:View)

%table.reporte
  %tr
    %th=t(:Bibliographic_database)
    %td=Base_Bibliografica[@search[:base_bibliografica_id]][:nombre]
  %tr
    %th=t(:Date)
    %td=@search[:fecha]
  %tr
    %th=t(:Search_criteria)
    %td=@search[:criterio_busqueda]
  %tr
    %th=t(:Description)
    %td=@search[:descripcion]
  %tr
    %th=t(:File)
    %td
      =partial("searchs/file_link".to_sym, :locals=>{search:@search})
