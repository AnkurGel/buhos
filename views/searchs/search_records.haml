.header=t_search_title(@revision[:nombre], @search.nombre,:Records_on_search)
%ul.breadcrumb
  %li
    %a{:href=>url("/review/#{@revision.id}")}=@revision.nombre
  %li
    %a{:href=>url("/review/#{@revision.id}/searchs")}=t(:Searchs)
  %li
    %a{:href=>url("/search/#{@search.id}")}=@search.nombre
  %li.active
    =t(:Records)

- if @registros.count>0
  %a{:href=>"/search/#{@search.id}/records/complete_doi"}
    %button{:class=>"btn btn-default btn-sm"}=t(:Download_Crossref_information_for_all_documents)
=partial(:records_list, :locals=>{:registros=>@registros})