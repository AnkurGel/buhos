- # params cd, ars, revision_id o revision
- ars||=nil
- abs_pres=AbstractPresentation.new
- revision||=Revision_Sistematica[revision_id]
- abs_pres.keywords =revision.keywords_as_array

%div{:class=>"panel-heading"}
  =CGI::escapeHTML cd.title
%div{:class=>"panel-body"}
  %p
    %strong="#{t(:APA_Reference)}:"
    =CGI::escapeHTML cd.ref_apa_6
    -unless ars.nil?
      - texto_referencias=sprintf("<strong>#{t(:Citations)}</strong>: #{t(:this_document_cites)}&nbsp;<strong>%d</strong> / #{t(:this_document_cited_by)}&nbsp;<strong>%d</strong> ", ars.cd_count_salida(cd[:id]).to_i, ars.cd_count_entrada(cd[:id]).to_i)
      - if ars.cd_count_entrada_rtr(cd[:id])
        -texto_referencias+=sprintf("/ #{t(:this_document_cited_by_rta_document)}&nbsp;<strong>%d</strong>", ars.cd_count_entrada_rtr(cd[:id]).to_i)
      %p=texto_referencias
  %p{:class=>""}
    %strong=t(:Abstract)
    - if !cd.abstract
      %em=t(:No_abstract)
    -else
      -#$log.info(cd)
      -abs_pres.text=cd.abstract
      -#$log.info(abs_pres)
      =abs_pres.html_with_keywords