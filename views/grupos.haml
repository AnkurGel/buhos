%h2=t(:Groups)
%a{:href=>url("/grupo/nuevo")}
  %img{:src=>url("images/list-add.png")}
  =t(:New_group)
%form{:method=>:post, :action=>url("/grupos/actualizar")}
  %table
    %thead
      %th=t(:Id)
      %th=t(:Name)
      %th=t(:Description)
      %th=t(:Administrator)
      %th=t(:Usuarios)
    %tbody
      - @grupos.each do |g|
        %tr
          %td
            %a{:href=>url("/grupo/#{g.id}/edicion")}=g.id
          %td=g.name
          %td=g.description
          %td=g.administrador.nombre
          %td=g.usuarios.map {|u| "[#{u.id}]#{u.nombre}"}.join(",")
            
  %input{:type=>:submit}
