%body
  %head
    %title Sistema de revisiones sistemáticas
    %script{:type=>"text/javascript", :src=>url("./bundle.js")}    
    %link{:href=>url("/css/main.css") , :media => "screen", :rel=>'stylesheet', :type=>'text/css'}
    %link{:href=>url("/css/print.css") , :media => "print", :rel=>'stylesheet', :type=>'text/css'}
  %body
    #outer
      #inner
        .title
          %h1 Sistema de revisiones bibliográficas
        #header
          #usuario
            =presentar_usuario
          #menu
            %ul.sf-menu
              -if permiso("ingreso")
                %li 
                  %a{:href=>"/revisiones"} Revisiones sistematicas
              -if permiso("canonico")
                %li 
                  %a{:href=>"/control"} Control de Canonicos
              -if permiso("grupos")
                %li
                  %a{:href=>"/grupos"} Usuarios y grupos                  
              -if permiso("estadisticas")
                %li
                  %a{:href=>"/grupos"} Estadisticas de uso                  
              -if permiso("administracion")
                %li 
                  %a{:href=>"#"} Administración
                  %ul
                    %li<
                      %a{:href=>url('/admin/elecciones')} Elecciones
                    %li<
                      %a{:href=>url('/admin/usuarios')} Usuarios
                    %li<
                      %a{:href=>url('/admin/mesas')} Mesas
                    %li<
                      %a{:href=>url('/admin/roles')} Roles
                    %li<
                      %a{:href=>url('/admin/equipos')} Equipos              
          %div#header-end

        #mensajes
          =imprimir_mensajes
          -$log.info(self.methods)
          
          -if settings.development?
            .desarrollo Desarrollo
        #content
          =yield
        #footer
          %p Copyright (c) 2016 , Bustos y Morales
