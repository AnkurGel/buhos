  - if permiso("revisiones_crear_propia")
    %a.btn.btn-default{:href=>url("/revision/nuevo")}
      %span{:class=>"glyphicon glyphicon-plus"}
      =t(:Systematic_review_new)
  - if permiso("grupos_crear")
    %a.btn.btn-default{:href=>url("/grupo/nuevo")}
      %span{:class=>"glyphicon glyphicon-plus"}
      =t(:Group_new)

